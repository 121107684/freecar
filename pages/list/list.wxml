<!--pages/list/list.wxml-->

<view class='content clearfix'>
  <view class="freebox" wx:for="{{listcar}}" wx:for-item="listcar" wx:key="id">
    <view class="flaxtop borbot">
      <view class="departure">
        {{listcar.departure}}
      </view>
      <view class='ico'></view>
      <view class="destination">
         {{listcar.destination}}
      </view>
    </view>

    <view class="flaxtop">
      <view class="cartime">{{listcar.date}}{{listcar.time}}</view>

      <view class="setunm flaxtop">
        共
        <view class="ftext">{{listcar.seatnum}}</view>个座位
      </view>
    </view>
    <navigator class='weui-btn' bindtap='seeinfo' url='../seeinfo/seeinfo?userid={{listcar.id}}&carinfo={{listcar._id}}'>查看行程</navigator>
  </view>
</view>
<view class="weui-loadmore" wx:if="{{isHideNoMore}}">
  <view class="weui-loadmore__tips">----------我是有底线的----------</view>
</view>
<view class="weui-loadmore" wx:else>
  <view class="weui-loading"></view>
  <view class="weui-loadmore__tips">正在加载</view>
</view>
