/* pages/seeinfo/seeinfo.wxss */
.page {
  background: #f0f0f0;
  min-height: 100vh;
}
.flaxtop {
  display: flex
}
.boxclass {
  width: 680rpx;
  background-color: #fff;
  padding:30rpx 15rpx;
  margin: 20rpx auto 0
}
.boxclass .userimg{
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  overflow: hidden
}
.boxclass .userimg image {
  width: 120rpx;
  height: 120rpx
}
.boxclass .userinfo {
  flex: 1;
  padding: 0rpx 10rpx;
  font-size: 32rpx;
  line-height: 60rpx
}
.boxclass .userinfo .username {
  font-size: 40rpx
}
.boxclass .userinfo .username {
  font-size: 40rpx
}
.boxclass .calluser{
  width: 160rpx;
  height: 100rpx;
  background: url('https://www.xunfengwx.com/images/call.png') no-repeat center center / 100rpx auto
}
.boxclass .calluser .callnum {
  margin-top: 100rpx;
  font-size: 24rpx;
  text-align: center
}
.thedate .date,
.thedate .time,
.thedate .plane{
  flex: 1;
  text-align: center;
  font-size: 40rpx;
  color:#ff0033;
  padding-bottom: 20rpx
}
.place {
  border-top: 1rpx dashed #ccc
}
.place .placeinfo{
  flex: 1
}
.place .qd, .place .zd{
  padding: 30rpx 10rpx 0rpx;
  font-size: 36rpx
}
.place .icozw {
  width: 160rpx;
  background: url('https://www.xunfengwx.com/images/zw.png') no-repeat center center / 100rpx auto;
  text-align: center
}
.place .zwnum {
  font-size: 60rpx;
  display: block;
  width: 80rpx;
  height: 80rpx;
  margin: 28rpx 0rpx 0rpx 56rpx;
  color: #ff0033
}
.statenum {
  border-top: 1rpx dashed #ccc;
  margin-top: 30rpx
}
.remarkstext {
  font-size: 36rpx;
  line-height: 60rpx;
  padding: 30rpx 0 20rpx
}
.remarksuse {
  font-size: 34rpx;
  color: #333;
  text-indent: 2em
}