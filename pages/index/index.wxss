/**index.wxss**/
.addchange {
  width: 720rpx;
  height: 280rpx;
  margin: 10rpx auto;
  background:no-repeat center center / 100% auto;
}
.borderbox {
  width: 500rpx;
  height: 160rpx;
  border:1px solid rgba(255, 255, 255, .8);
  margin: 60rpx auto;
  border-top: none;
  position: relative
}
.borderbox::after,
.borderbox::before{
  content:" ";
  position:absolute;
  height: 1px;
  background:rgba(255, 255, 255, .8);
  color: #fff;
  width: 120rpx;
  top:-1rpx;
  left:-1rpx;
  font-size: 0px;
}
.borderbox::before{
  left: auto;
  right: -1px;
}
.borderbox:active{
  background-color: rgba(255, 255, 255, .2)
}
.borderbox .name {
  color: #fff;
  text-align: center;
  font-size: 32rpx;
  font-weight: normal;
  position: relative;
  top:-18rpx;
}
.borderbox .about {
  font-size: 26rpx;
  width: 400rpx;
  margin: 0 auto;
  text-align: center;
  color: #fff
}